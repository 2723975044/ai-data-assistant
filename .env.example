# ========== LLM API Keys ==========
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1

# 阿里云通义千问
DASHSCOPE_API_KEY=your-dashscope-api-key

# 智谱AI
ZHIPUAI_API_KEY=your-zhipuai-api-key

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# ========== Default LLM Settings ==========
DEFAULT_LLM_PROVIDER=openai  # openai, dashscope, zhipuai, anthropic
DEFAULT_MODEL_NAME=gpt-3.5-turbo
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2000

# ========== Embedding Settings ==========
EMBEDDING_MODEL=text-embedding-ada-002  # OpenAI embedding
# 或使用本地模型: EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5

# ========== Vector Database Settings ==========
VECTOR_DB_TYPE=chroma  # chroma, faiss, qdrant
CHROMA_PERSIST_DIRECTORY=./data/chroma
COLLECTION_NAME=company_data

# ========== Database Connections ==========
# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your-username
MYSQL_PASSWORD=your-password
MYSQL_DATABASE=your-database

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your-username
POSTGRES_PASSWORD=your-password
POSTGRES_DATABASE=your-database

# MongoDB
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=your-database

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========== RAG Settings ==========
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# ========== API Settings ==========
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# ========== Logging ==========
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ========== Agent Settings ==========
AGENT_NAME=数据小秘书
AGENT_DESCRIPTION=我是你的数据管理助手，可以帮你查询和分析公司数据
MAX_CONVERSATION_HISTORY=10
